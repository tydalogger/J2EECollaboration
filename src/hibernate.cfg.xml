<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.dialect">
			org.hibernate.dialect.OracleDialect
		</property>
		<property name="hibernate.connection.driver_class">
			oracle.jdbc.driver.OracleDriver
		</property>
		<property name="hibernate.connection.url">
			jdbc:oracle:thin:@localhost:1521:xe
		</property>
		<property name="hibernate.connection.username">
			hr
		</property>
		<property name="hibernate.connection.password">
			hr
		</property>
		<property name="show_sql">true</property>
		<property name="hbm2ddl.auto">update</property>

		<!-- List of XML mapping files -->
		<mapping class="in.tyda.beans.User_Profile" />
		<mapping class="in.tyda.beans.Forum_Actions" />
		<mapping class="in.tyda.beans.Forum" />
		<mapping class="in.tyda.beans.Friend_Request" />
		<mapping class="in.tyda.beans.Friends" />
		<mapping class="in.tyda.beans.Blog" />
		<mapping class="in.tyda.beans.Blog_Actions" />
		<mapping class="in.tyda.beans.Post" />
		
	</session-factory>
</hibernate-configuration>